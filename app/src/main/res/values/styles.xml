<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cricleBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/avatar_animation_right_in</item>
        <item name="android:windowExitAnimation">@anim/avatar_animation_right_out</item>
    </style>

</resources>
