<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footprint_relayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".mapActivity">


    <LinearLayout
        android:id="@+id/footprint_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:focusable="false"
        android:orientation="vertical">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/listview_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/footprint_LinearLayout"
        android:orientation="vertical">

        <ListView
            android:id="@+id/footprint_Listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            ></ListView>

    </LinearLayout>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_below="@id/footprint_LinearLayout"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/refresh"
        android:background="#00000000"/>

    <ImageView
        android:id="@+id/addmore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_below="@id/footprint_LinearLayout"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/addmore"
        android:background="#00000000"/>

    <ImageView
        android:id="@+id/checked"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_below="@id/footprint_LinearLayout"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/checked"
        android:background="#00000000"/>

    <ImageView
        android:id="@+id/center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:layout_below="@id/footprint_LinearLayout"
        android:layout_marginTop="-35dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ultraball"
        android:background="#00000000"/>

</RelativeLayout>